<UserControl x:Class="PCU_GUI_Idea.Tabs.Instruments"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PCU_GUI_Idea.Tabs"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             mc:Ignorable="d" 
             d:DesignHeight="945" d:DesignWidth="1390">
    <Grid Background="{DynamicResource PanelBackground}" telerik:CornerRadiusHelper.ClipRadius="24">
        <Grid Margin="20" Background="{DynamicResource ButtonContrast}" telerik:CornerRadiusHelper.ClipRadius="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" MaxHeight="50" MinHeight="20"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!--Toolbar Grid-->
            <Grid Grid.Row="0">
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="FileButton" Style="{DynamicResource ToolbarButton}" Margin="8,6,2,6" Width="105" Content="File" telerik:CornerRadiusHelper.ClipRadius="4"/>
                    <Button x:Name="EditButton" Style="{DynamicResource ToolbarButton}" Margin="0,6,2,6" Width="105" Content="Edit" telerik:CornerRadiusHelper.ClipRadius="4"/>
                    <Button x:Name="ViewButton" Style="{DynamicResource ToolbarButton}" Margin="0,6,2,6" Width="105" Content="View" telerik:CornerRadiusHelper.ClipRadius="4"/>
                    <Button x:Name="Tools" Style="{DynamicResource ToolbarButton}" Margin="0,6,2,6" Width="105" Content="Tools" telerik:CornerRadiusHelper.ClipRadius="4"/>
                    <Button x:Name="Help" Style="{DynamicResource ToolbarButton}" Margin="1,6,8,6" Width="105" Content="Help" telerik:CornerRadiusHelper.ClipRadius="4"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                
                <telerik:RadComboBox  x:Name="deviceLeft_comboBox"
                                      VerticalContentAlignment="Center" 
                                      VerticalAlignment="Top"
                                      HorizontalContentAlignment="Center" 
                                      HorizontalAlignment="Left"
                                      Height="50"
                                      Width="300" 
                                      Margin="190,40,0,0" 
                                      Background="{DynamicResource ButtonAndHighlightBackground}" 
                                      Foreground="{DynamicResource TextForeground}" 
                                      FontSize="24" 
                                      BorderThickness="0" 
                                      BorderBrush="Transparent" 
                                      telerik:StyleManager.Theme="Windows8" 
                                      telerik:CornerRadiusHelper.ClipRadius="12"  
                                      DropDownButtonIconContent="⮟" 
                                      DropDownOpened="Search_ModelList" 
                                      SelectionChanged="Load_Instrument"
                                      EmptyText="Select Device">

                    <telerik:RadComboBox.ItemContainerStyle>
                        <Style TargetType="telerik:RadComboBoxItem">
                            <Setter Property="Background" Value="{DynamicResource ButtonAndHighlightBackground}"/>
                            <Setter Property="BorderBrush" Value="{DynamicResource ButtonAndHighlightBackground}"/>
                            <Setter Property="Foreground" Value="{DynamicResource TextForeground}" />
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="FontSize" Value="24"/>
                        </Style>
                    </telerik:RadComboBox.ItemContainerStyle>

                    <telerik:RadComboBox.DropDownButtonIconTemplate>
                        <DataTemplate>
                            <telerik:RadGlyph Glyph="{Binding}" Foreground="{DynamicResource TextForeground}"/>
                        </DataTemplate>
                    </telerik:RadComboBox.DropDownButtonIconTemplate>
            
                </telerik:RadComboBox>

                <TextBox x:Name="efficiency" Height="50" Width="200" Grid.ColumnSpan="2" Margin="575,40,575,765" Focusable="False" BorderBrush="{DynamicResource ButtonAndHighlightBackground}" Background="{DynamicResource ButtonAndHighlightBackground}" SelectionBrush="{x:Null}" SelectionTextBrush="{x:Null}" Foreground="{DynamicResource TextForeground}" telerik:CornerRadiusHelper.ClipRadius="15" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="24" FontWeight="Medium"/>
                <Image Height="80" Width="300" Margin="190,99,185,676"/>

                <telerik:RadComboBox  x:Name="deviceRight_comboBox"                                     
                       VerticalContentAlignment="Center" 
                       VerticalAlignment="Top"
                       HorizontalContentAlignment="Center" 
                       HorizontalAlignment="Center"
                       Height="50"
                       Width="300" 
                       Margin="0,40,0,0" 
                       Background="{DynamicResource ButtonAndHighlightBackground}" 
                       Foreground="{DynamicResource TextForeground}" 
                       FontSize="24" 
                       BorderThickness="0" 
                       BorderBrush="Transparent" 
                       telerik:StyleManager.Theme="Windows8" 
                       telerik:CornerRadiusHelper.ClipRadius="12"  
                       DropDownButtonIconContent="⮟" 
                       DropDownOpened="Search_ModelList" 
                       SelectionChanged="Load_Instrument"
                       EmptyText="Select Device" Grid.Column="1">

                    <telerik:RadComboBox.ItemContainerStyle>
                        <Style TargetType="telerik:RadComboBoxItem">
                            <Setter Property="Background" Value="{DynamicResource ButtonAndHighlightBackground}"/>
                            <Setter Property="BorderBrush" Value="{DynamicResource ButtonAndHighlightBackground}"/>
                            <Setter Property="Foreground" Value="{DynamicResource TextForeground}" />
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="FontSize" Value="24"/>
                        </Style>
                    </telerik:RadComboBox.ItemContainerStyle>

                    <telerik:RadComboBox.DropDownButtonIconTemplate>
                        <DataTemplate>
                            <telerik:RadGlyph Glyph="{Binding}" Foreground="{DynamicResource TextForeground}"/>
                        </DataTemplate>
                    </telerik:RadComboBox.DropDownButtonIconTemplate>

                </telerik:RadComboBox>
                <Image Height="80" Width="300" Margin="187,99,188,676" Grid.Column="1"/>

                <Grid Grid.Column="0">
                    <ContentControl x:Name="deviceLeft"/>
                </Grid>

                <Grid Grid.Column="1">
                    <ContentControl x:Name="deviceRight"/>
                </Grid>

            </Grid>
        </Grid>
    </Grid>
</UserControl>
