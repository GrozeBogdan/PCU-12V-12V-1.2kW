<UserControl x:Class="PCU_GUI_Idea.Tabs.Customize"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PCU_GUI_Idea.Tabs"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             mc:Ignorable="d" 
            d:DesignHeight="945" 
            d:DesignWidth="1390"
             >
    <!--Unloaded="UserControl_Unloaded"
Loaded="IntializeOthersFromMemory"-->
    <Grid Background="{DynamicResource PanelBackground}" telerik:CornerRadiusHelper.ClipRadius="24">
        <Grid Margin="20" Background="{DynamicResource ButtonContrast}" telerik:CornerRadiusHelper.ClipRadius="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" MaxHeight="50" MinHeight="20"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!--Toolbar Grid-->
            <Grid Grid.Row="0">
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="FileButton" Style="{DynamicResource ToolbarButton}" Margin="8,6,2,6" Width="105" Content="File" telerik:CornerRadiusHelper.ClipRadius="4"/>
                    <Button x:Name="EditButton" Style="{DynamicResource ToolbarButton}" Margin="0,6,2,6" Width="105" Content="Edit" telerik:CornerRadiusHelper.ClipRadius="4"/>
                    <Button x:Name="ViewButton" Style="{DynamicResource ToolbarButton}" Margin="0,6,2,6" Width="105" Content="View" telerik:CornerRadiusHelper.ClipRadius="4"/>
                    <Button x:Name="Tools" Style="{DynamicResource ToolbarButton}" Margin="0,6,2,6" Width="105" Content="Tools" telerik:CornerRadiusHelper.ClipRadius="4"/>
                    <Button x:Name="Help" Style="{DynamicResource ToolbarButton}" Margin="1,6,8,6" Width="105" Content="Help" telerik:CornerRadiusHelper.ClipRadius="4"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1">
                <telerik:RadSpreadsheet x:Name="excelTable" Margin="50,20,61,0" VerticalAlignment="Top" Height="600" Visibility="Visible">

                </telerik:RadSpreadsheet>
                <telerik:RadComboBox HorizontalContentAlignment="Center" VerticalContentAlignment="Center" EmptyText="Theme Select" Height="50" Width="300" Margin="411,662,639,143" Background="{DynamicResource ButtonAndHighlightBackground}" Foreground="{DynamicResource TextForeground}" FontSize="24" BorderThickness="0" BorderBrush="Transparent" telerik:StyleManager.Theme="Windows8" telerik:CornerRadiusHelper.ClipRadius="12" x:Name="themeBox" DropDownButtonIconContent="⮟" SelectionChanged="themeBox_SelectionChanged">
                    <telerik:RadComboBox.ItemContainerStyle>
                        <Style TargetType="telerik:RadComboBoxItem">
                            <Setter Property="Background" Value="{DynamicResource ButtonAndHighlightBackground}"/>
                            <Setter Property="BorderBrush" Value="{DynamicResource ButtonAndHighlightBackground}"/>
                            <Setter Property="Foreground" Value="{DynamicResource TextForeground}" />
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="FontSize" Value="24"/>
                        </Style>
                    </telerik:RadComboBox.ItemContainerStyle>
                    <telerik:RadComboBox.DropDownButtonIconTemplate>
                        <DataTemplate>
                            <telerik:RadGlyph Glyph="{Binding}" Foreground="{DynamicResource TextForeground}"/>
                        </DataTemplate>
                    </telerik:RadComboBox.DropDownButtonIconTemplate>
                    <telerik:RadComboBoxItem Content="Sunset"/>
                    <telerik:RadComboBoxItem Content="Chill"/>
                </telerik:RadComboBox>

                <Button Style="{DynamicResource ToolbarButton}" Height="50" Width="300" Margin="50,762,1000,43" telerik:CornerRadiusHelper.ClipRadius="8" Content="Upload to Cloud" FontSize="24"/>
                <Button Style="{DynamicResource ToolbarButton}" Height="50" Width="300" Margin="411,762,639,43" telerik:CornerRadiusHelper.ClipRadius="8" Content="Autoselect Instrumentation" FontSize="22"/>
                <Button Click="Generate_Excel" Style="{DynamicResource ToolbarButton}" Height="50" Width="300" Margin="776,762,274,43" telerik:CornerRadiusHelper.ClipRadius="8" Content="Generate Excel Template" FontSize="24"/>
                <Button Click="Converter_Efficency_Model" Style="{DynamicResource ToolbarButton}" Height="50" Width="300" Margin="776,662,274,143" telerik:CornerRadiusHelper.ClipRadius="8" Content="Start Characterization" FontSize="24"/>

                <Label Content="Max Current" Foreground="{DynamicResource TextForeground}" FontWeight="Medium" FontSize="15" Width="150" Height="30" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="1139,732,61,93"/>
                <TextBox x:Name="excel_Current" BorderBrush="{DynamicResource ButtonAndHighlightBackground}" Background="{DynamicResource ButtonAndHighlightBackground}" Foreground="{DynamicResource TextForeground}" Width="150" Height="50" Margin="1139,762,61,43" telerik:CornerRadiusHelper.ClipRadius="12" Text="" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontWeight="Medium" FontSize="20"/>
                <Label Content="Max Frequency" Foreground="{DynamicResource TextForeground}" FontWeight="Medium" FontSize="15" Width="150" Height="30" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="1139,632,61,193"/>
                <TextBox x:Name="excel_Frequency" BorderBrush="{DynamicResource ButtonAndHighlightBackground}" Background="{DynamicResource ButtonAndHighlightBackground}" Foreground="{DynamicResource TextForeground}"  Width="150" Height="50" Margin="1139,662,61,143" telerik:CornerRadiusHelper.ClipRadius="12" Text="" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontWeight="Medium" FontSize="20"/>

                <telerik:RadComboBox  VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="50" Width="300" Margin="50,660,1000,145" Background="{DynamicResource ButtonAndHighlightBackground}" Foreground="{DynamicResource TextForeground}" FontSize="24" BorderThickness="0" BorderBrush="Transparent" telerik:StyleManager.Theme="Windows8" telerik:CornerRadiusHelper.ClipRadius="12" x:Name="databaseBox" DropDownButtonIconContent="⮟" DropDownOpened="SearchForDatabases" EmptyText="Select Database">
                    <telerik:RadComboBox.ItemContainerStyle>
                        <Style TargetType="telerik:RadComboBoxItem">
                            <Setter Property="Background" Value="{DynamicResource ButtonAndHighlightBackground}"/>
                            <Setter Property="BorderBrush" Value="{DynamicResource ButtonAndHighlightBackground}"/>
                            <Setter Property="Foreground" Value="{DynamicResource TextForeground}" />
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="FontSize" Value="24"/>
                        </Style>
                    </telerik:RadComboBox.ItemContainerStyle>
                    <telerik:RadComboBox.DropDownButtonIconTemplate>
                        <DataTemplate>
                            <telerik:RadGlyph Glyph="{Binding}" Foreground="{DynamicResource TextForeground}"/>
                        </DataTemplate>
                    </telerik:RadComboBox.DropDownButtonIconTemplate>
                </telerik:RadComboBox>
 
            </Grid>

        </Grid>
    </Grid>

</UserControl>
    
