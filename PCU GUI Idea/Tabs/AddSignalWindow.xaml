<Window x:Class="PCU_GUI_Idea.AddSignalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PCU_GUI_Idea"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        mc:Ignorable="d"
        Title="" 
        Height="700" 
        Width="1050"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        MouseDown="Window_MouseDown">
    <Border Background="{DynamicResource PanelBackground}" 
            CornerRadius="20"
            BorderBrush="{DynamicResource ButtonAndHighlightBackground}"
            BorderThickness="3">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.RowSpan="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock Text="DC-DC Converter"
                           Grid.ColumnSpan="6"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Grid.Column="0"
                           FontWeight="Medium"
                           FontSize="21"
                           Background="Transparent"
                           Margin="0,5,0,0"
                           Foreground="{DynamicResource TextForeground}"
                            />
                <Button Style="{DynamicResource WindowButton}"
                        Grid.Column="16"
                        Grid.ColumnSpan="2"
                        Content="_"
                        FontSize="30"
                        Margin="5, 5, 0 ,0"
                        Click="Minimize_Window"
                        Width="70"
                        Height="40"
                        />
                <Button Style="{DynamicResource WindowButton}"
                        Grid.Column="18"
                        Grid.ColumnSpan="2"
                        Content="&#x26F6;"
                        FontSize="30"
                        Margin="0, 5, 0 ,0"
                        Click="Maximize_Window"
                        Width="70"
                        Height="40"
                        />
                <Button Style="{DynamicResource ExitButton}"
                        Grid.Column="20"
                        Grid.ColumnSpan="2"            
                        Content="X"
                        FontSize="30"
                        Margin="0, 5, 5 ,0" 
                        Click="Exit_Button"
                        Width="70"
                        Height="40"
                        />
            </Grid>
            <Grid Grid.Row="2"
                  Margin="10">
                <telerik:RadMultiColumnComboBox x:Name="radSignalComboBox"
                                        Width="900" 
                                        VerticalAlignment="Top" 
                                        DisplayMemberPath="Name" 
                                        SelectionMode="Multiple" 
                                        DropDownHeight="430"
                                        DropDownWidth="900"
                                        telerik:StyleManager.Theme="Windows11">
                    <telerik:RadMultiColumnComboBox.ItemsSourceProvider>
                        <telerik:GridViewItemsSourceProvider ItemsSource="{Binding WindowMessages}" />
                    </telerik:RadMultiColumnComboBox.ItemsSourceProvider>
                </telerik:RadMultiColumnComboBox>
                <Button Style="{DynamicResource ToolbarButton}"
                        Height="30" 
                        Width="100" 
                        VerticalAlignment="Bottom" 
                        HorizontalAlignment="Right" 
                        Content="Add" 
                        Click="Add_Signals"
                        FontSize="16"                       
                        Margin="10"
                        telerik:CornerRadiusHelper.ClipRadius="8">
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>
